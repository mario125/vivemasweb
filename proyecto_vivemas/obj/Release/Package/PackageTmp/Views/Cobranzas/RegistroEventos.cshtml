                                </li>
                            </ul>
                        </div>
                        <div class="col-7">
                            <label for="inputEvento">Evento:</label>
                            <textarea id="inputEvento" name="inputEvento" class="form-control" cols="5" rows="5"></textarea>
                            <div class="row">
                                <div class="col-4">
                                    <label for="selectMetodoContacto">Metodo Contacto:</label>
                                    <select id="selectMetodoContacto" class="form-control" name="selectMetodoContacto" multiple="multiple"></select>
                                </div>
                                <div class="col-4">
                                    <label for="selectMetodoContacto">Fecha:</label>
                                    <input type="date" id="inputFecha" name="inputFecha" class="form-control" />
                                </div>
                                <div class="col-4">
                                    <label for="selectMetodoContacto">Monto:</label>
                                    <input type="number" id="inputMonto" class="form-control" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="buttonAgregarEvento" class="btn btn-primary">Aceptar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/cobranzas/registroEventos.js"></script>
}