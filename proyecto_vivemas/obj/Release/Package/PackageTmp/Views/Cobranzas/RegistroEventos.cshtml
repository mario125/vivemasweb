@{
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
    ViewBag.Title = "Registro de Eventos";
}
@section styles{
    <link rel="stylesheet" href="~/Css/Cobranzas/pagos.css" />
    <link rel="stylesheet" href="~/Css/Cobranzas/registroEventos.css" />
}

<div class="row">
    <div class="col-12 ">
        <div class="card">
            <div class="card-header">
                Registro de Eventos
            </div>
            <div class="card-body">
                <div class="row">
                    <div id="tableEventos"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalEvento" class="modal fade">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="hTituloSeparaciones" class="modal-title">Crear Eventos</h5>
            </div>
            <form id="formEventos">
                <div class="modal-body ">
                    <div class="row">
                        <input type="hidden" id="inputContratoId" />
                        <div id="divHistoria" class="col-5 overflow-auto" style="height:230px;">
